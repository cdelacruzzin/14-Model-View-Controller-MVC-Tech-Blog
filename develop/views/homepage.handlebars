{{#each blogs as |blog| }}

<div class="row mb-4 project lightBlue border border-primary rounded">
    <div class="col-md-5">
        <h2>
            <a href="/blog/{{blog.id}}">{{blog.name}}</a>

            <p>Created by {{blog.user.name}} on {{format_date blog.date_created}}</p> 
        </h2> 
    <p>
      {{blog.description}}
    </p>
    </div>

</div>
{{/each}}