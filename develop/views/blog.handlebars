<div class="container container-fluid mt-5">
    <div class="row justify-content-center">
        <div class="col-6 p-4 border border-primary rounded lightBlue">
            <h2 id="blogname">{{name}}</h2>
            <p id="description">{{description}}</p>
            <p>Created by <span id="username">{{user.name}}</span>on <span id="date">{{format_date date_created}}</span>
            </p>

            <div class="border-primary rounded lightBlue d-flex">
                
                    <div class="flex-grow-1 mr-2">
                        <textarea id="comment" placeholder="Write a comment"></textarea>
                    </div>
                    <div>
                        <button class="btn btn-primary" id="submitbtn" data-id="{{id}}">Submit {{id}}</button>
                    </div>
                
            </div>
        </div>

{{!-- iterates each comment --}}
        {{#if comments.length}}
        <div class="col-6  p-4 border border-primary rounded lightBlue">
          <h3 id="blogname">Comments:</h3>
          {{#each comments as |comment|}}
          <div class="row mb-2">
            <div class="col-md-8">
              <p>{{comment.description}}</p>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
    {{/if}}
</div>
</div>
<script src="/js/blog.js"></script>