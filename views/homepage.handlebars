




<div class="row gap-4 d-flex justify-content-center">
{{#each blogs as |blog| }}
    <div class="col-sm-5 mb-4 project lightBlue border border-primary rounded">
        <div class="col-md-5">
            <h2>
                <a href="/blog/{{blog.id}}">{{blog.name}}</a>
            </h2>
            <p>Created by {{blog.user.name}} on {{format_date blog.date_created}}</p>
            <p>
                {{blog.description}}
            </p>
        </div>

    </div>
{{/each}}
</div>

